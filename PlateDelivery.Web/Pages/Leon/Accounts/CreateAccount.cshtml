@page
@model PlateDelivery.Web.Pages.Leon.Accounts.CreateAccountModel
@{
    ViewData["Title"] = "افزودن حساب";
}

<form enctype="multipart/form-data" method="post">
    <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">

        <div class="x_panel">
            <div class="x_title">
                <h2>
                    افزودن حساب
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="item form-group">
                        <label asp-for="CreateAccountViewModel.BankName" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateAccountViewModel.BankName" class="form-control  " style="font-size:medium" placeholder="لطفا نام بانک را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateAccountViewModel.BankName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateAccountViewModel.BankCode" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateAccountViewModel.BankCode" class="form-control  " style="font-size:medium" onkeypress="return onlyNumberKey(event)" placeholder="لطفا کد بانک را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateAccountViewModel.BankCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateAccountViewModel.Iban" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateAccountViewModel.Iban" class="form-control" style="font-size:medium"  placeholder="لطفا شماره شبا را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateAccountViewModel.Iban" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="col-md-12" />
                    <div class="item form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">

                            <input type="submit" class="btn btn-success" value="ثبت" />
                            <a asp-page="Index" class="btn btn-warning">انصراف</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script>
        function onlyNumberKey(evt) {

            // Only ASCII character in that range allowed
            var ASCIICode = (evt.which) ? evt.which : evt.keyCode
            if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
                return false;
            return true;
        }
    </script>
}
