@page "{Id}"
@using PlateDelivery.Core.Models;
@using PlateDelivery.DataLayer.Entities.PermissionAgg
@model PlateDelivery.Web.Pages.Leon.Permissions.EditPermissionModel
@{
    ViewData["Title"] = "ویرایش مجوز";
    List<PermissionViewModel> permissions = ViewData["Permissions"] as List<PermissionViewModel>;
}

<form method="post">
    <input type="hidden" asp-for="Permission.Id" />
    <div class="col-md-8 col-sm-8 col-xs-8">

        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ویرایش مجوز

                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            عنوان مجوز :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="Permission.PermissionName" required="" class="form-control  " placeholder="عنوان مجوز را وارد نمایید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Permission.PermissionName" class="text-danger"></span>
                        </div>
                    </div>

                    @if (permissions.Count > 0)
                    {
                        <div class=" item form-group">
                            <label class="control-label col-md-7  ">
                                انتخاب والد :
                            </label>
                            <div class="col-md-8 ">
                                <select name="selectedParent" class="select2 form-control" style="font-size:medium">
                                    <option value="0">لطفا گروه مجوز را انتخاب کنید</option>
                                    @foreach (var item in permissions)
                                    {
                                        <option value="@item.Id" selected="@(Model.Permission.ParentId == item.Id)">@item.PermissionName</option>
                                    }

                                </select>
                            </div>

                        </div>
                    }



                    <hr class="col-md-12" />
                    <div class="item form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">

                            <input type="submit" class="btn btn-success" value="ثبت" />
                            <a asp-page="Index" class="btn btn-warning">انصراف</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

