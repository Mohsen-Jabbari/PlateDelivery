                            <span asp-validation-for="CreateTopYarTmpViewModel.RetrivalRef" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.TrackingNo" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.TrackingNo" class="form-control" onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا شماره پیگیری را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.TrackingNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.TransactionDate" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.TransactionDate" class="form-control" onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا تاریخ تراکنش را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.TransactionDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.TransactionTime" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.TransactionTime" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا زمان تراکنش را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.TransactionTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.FinancialDate" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.FinancialDate" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا تاریخ مالی را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.FinancialDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.Iban" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.Iban" class="form-control  " style="font-size:medium" placeholder="لطفا شماره شبا را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.Iban" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.Amount" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.Amount" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا مبلغ را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.PrincipalAmount" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.PrincipalAmount" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا مبلغ اصلی را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.PrincipalAmount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.CardNo" class="control-label col-md-7  ">
