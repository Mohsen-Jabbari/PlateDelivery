                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.CardNo" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا شماره کارت را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.CardNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.Terminal" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.Terminal" class="form-control  " onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا شماره پایانه را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.Terminal" class="text-danger"></span>
