                <div class="row">
                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.ProvinceName" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.ProvinceName" class="form-control  " style="font-size:medium" placeholder="لطفا نام استان را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.ProvinceName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.SubProvince" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.SubProvince" class="form-control  " style="font-size:medium" placeholder="لطفا نام شهر / مرکز را وارد کنید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="CreateTopYarTmpViewModel.SubProvince" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label asp-for="CreateTopYarTmpViewModel.RetrivalRef" class="control-label col-md-7  ">
                        </label>
                        <div class="col-md-8">
                            <input asp-for="CreateTopYarTmpViewModel.RetrivalRef" class="form-control" onkeypress="return onlyNumberKey(event)" style="font-size:medium" placeholder="لطفا شماره مرجع را وارد کنید" type="text">
