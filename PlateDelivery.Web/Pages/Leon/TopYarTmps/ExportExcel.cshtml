@page "{DocDate}"
@using PlateDelivery.Core.Convertors
@model PlateDelivery.Web.Pages.Leon.TopYarTmps.ExportExcelModel
@{
    var Title = ViewBag.Title;
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                @Title
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <form method="post">
                            <input type="hidden" id="DocDate" name="DocDate" value="@ViewBag.DocDate" />
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                نوع خروجی اکسل
                                <select asp-for="ExportType" asp-items="@ViewBag.ExportType" class="form-control dropdown"></select>
                                <input type="submit" value="خروجی اکسل" class="btn btn-success btn-round" />
                                <a href="/Leon/TopYarTmps/ExportDocument/" class="btn btn-danger btn-round">بازگشت</a>
                            </div>
                        </form>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12">
                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 30px;">ردیف</th>
                                        <th style="width: 70px;">سال</th>
                                        <th style="width: 50px;">ماه</th>
                                        <th style="width: 155px;">تاریخ اسناد</th>
                                        <th style="width: 130px;">تعداد اسناد</th>
                                    </tr>
                                </thead>


                                <tbody>

                                    <tr role="row" class="odd">
                                        <td>@rowCount</td>
                                        <td>@Model.DocumentViewModel.Documents[0].Year.GetDescription()</td>
                                        <td>@Model.DocumentViewModel.Documents[0].Month.GetDescription()</td>
                                        <td>@Model.DocumentViewModel.Documents[0].TransactionDate</td>
                                        <td>@Model.DocumentViewModel.Documents.Count</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>